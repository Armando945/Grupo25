     public static  void registraranimal(Pungo1 pungo,int cont){
        Scanner teclado = new Scanner(System.in);
        int x = 1,y=1;
        String nomeanima; 
        int ano,dia,mes;
                   
        try{
            do{
                System.out.print("nome do animal  : ");
                pungo.nomeanimal= teclado.nextLine();
                nomeanima =pungo.nomeanimal;
                y = p.verifnome(nomeanima,nomeanima);
            }while(y!=0);
         }catch(     InputMismatchException e){
         System.out.println("erro nome invalido "+ e.getMessage());
        }
          
          limpatela();
        System.out.print("qual a especie do animal  : ");
        pungo.especie = teclado.nextLine();
        System.out.print("qual a raça do animal : ");
        pungo.racca = teclado.nextLine();
          limpatela();
                   
       try{
        do{ 
            System.out.print("digita o ano  de nascimento : ");
            ano = teclado.nextInt();
            System.out.print("digite o dia de nascimento : ");
            dia = teclado.nextInt();
            System.out.print("digite o numero relacionado ao mes  : ");
            mes = teclado.nextInt();
            x = p.verifidata(ano,dia,mes);
        }while(x!=0);
        pungo.data = p.convertipo(ano,dia,mes);
        pungo.idbixo = "CLI"+p.nomearxxx( cont)+"AO";
        pungo.idade = 2025-ano;
      System.out.println("ID  "+pungo.idbixo);
     
       }catch(     InputMismatchException e){
         System.out.println("erro caracter invalido "+ e.getMessage());
        }            
          limpatela();
 }// fim registrar animal 
   
     
  public static  void registrardono( Pungo1 pungo,int cont){
        Scanner teclado = new Scanner(System.in);
        int y=1;
        String nome1; 
       limpatela();         
       System.out.println("digite qualquer numero ou letra para continuar "); 
       teclado.nextLine();
       limpatela();
       
        try{
          do{
              System.out.print("escreva o nome do proprietario : ");
              pungo.nomedono = teclado.nextLine();
              nome1 = pungo.nomedono;
              y = p.verifnome(nome1,nome1);
          }while(y!=0    && nome1!= null);
      }catch(     InputMismatchException e){
         System.out.println("erro nome invalido "+ e.getMessage());
      }
   
      try{
         System.out.print("digite o contacto do proprietario   : ");
         pungo.contacto = teclado.nextInt();
      }catch(     InputMismatchException e){
         System.out.println("erro nome invalido "+ e.getMessage());
      }
   
      pungo.iddono = "PRO"+p.nomearxxx( cont)+"AO";
       limpatela();
                   
  }// fim registrar dono 
   
      
   
 public static   void registrarvisita(Pungo1 pungo){
      Scanner teclado = new Scanner(System.in);
      int y =0,x=0,custo1;
      int ano,dia,mes;
      limpatela();
                   
      try{
         do{
            System.out.printf(" qual o tipo de visita  : \n[1]- consulta  \n[2]- vacinacao \n[3]- higiene (banho) \n");
            x = teclado.nextInt();
            if(x==1){
                pungo.consulta1+=1;
            }else{
                if(x==2){ 
                 pungo.vacina+=1;
                }else{ 
                    if(x==3){ 
                     pungo.banho+=1;    
                    }
                }
            }
             if(x<1 || x>3){
                 System.out.println("erro  escolha uma das opcao valida ");
             }
      }while(x<1 || x>3);
       
      }catch(     InputMismatchException e){
         System.out.println("erro argumento invalido "+ e.getMessage());
      }
      System.out.println("digite qualquer numero ou letra para continuar "); 
      teclado.nextLine();
      limpatela();
  
      try{
       System.out.print("nome do veterinario : ");
       pungo.veterinario = teclado.nextLine();
         System.out.println("digite qualquer numero ou letra para continuar "); 
          teclado.nextLine();                                    
      }catch(     InputMismatchException e){
         System.out.println("erro nome invalido "+ e.getMessage());
      }
   
     try{
       do{
        System.out.print("quanto custou : ");
        pungo.custo = teclado.nextInt();
        custo1=pungo.custo;
        teclado.nextLine();
      }while(custo1<=0);
     }catch(     InputMismatchException e){
         System.out.println("erro argumeto invalido "+ e.getMessage());
     }
   
   
    do{
         try{
     System.out.print("digita ano da visita : ");
     ano = teclado.nextInt();
     System.out.print("digite o dia  : ");
     dia = teclado.nextInt();
     System.out.print("digite o numero relacionado ao mes  : ");
     mes = teclado.nextInt();
     y= p.verificadordata(ano,dia,mes);
     pungo.datav = p.convertipo(ano,dia,mes);               
         }catch(     InputMismatchException e){
              y=0;
              
    System.out.println("erro argumento invalido "+ e.getMessage());
              break;
   }     
    System.out.println("erro argumento  "+ y);     
         }while(y!=1);
      
   
   
   try{
        System.out.println("digite qualquer numero ou letra para continuar "); 
        teclado.nextLine();
    System.out.println("OBSERVACOES : ");
    pungo.observ = teclado.nextLine();
    
   }catch(     InputMismatchException e){
    System.out.println("erro argumento invalido "+ e.getMessage());
   }
                     limpatela();
                   
 } // fim registar visita 
 
     
     public static void guardardados(Pungo1 pungo ,File arquivo ){
        
       String aux;
       try{
          FileWriter lapes = new FileWriter(arquivo,true);
           
          lapes.write("=======================================================================\n");
          lapes.write("NOME DO PROPRIETARIO : " +pungo.nomedono+" \n");
          lapes.write(  "ID DO PROPRIETARIO "+pungo.iddono+" \n");
          lapes.write("NOME DO ANIMAL "+  pungo.nomeanimal+" \n");
          lapes.write("ID DO ANIMAl "+ pungo.idbixo+" \n");
          lapes.write("=======================================================================\n");
          lapes.write( "ESPECIE "+ pungo.especie+" \n");
          lapes.write("REÇA  :"+ pungo.racca+" \n");
          lapes.write( "IDADE DO ANIMAL "+ pungo.idade +" \n");
          lapes.write("DATA DE NASCIMENTO "+  pungo.data +" \n");
          lapes.write("=======================================================================\n");
          lapes.write("DATA ULTIMA CONSULTA "+  pungo.datav+" \n"); 
          lapes.write( "N* CONSULTA "+ pungo.consulta1 +" \n");
          lapes.write( "N* VACINA "+  pungo.vacina  +" \n");
          lapes.write( "N* VISITA PARA HIGIENE "+  pungo.banho +" \n");
          lapes.write("CUSTO "+  pungo.custo+"KZ \n");
          lapes.write("NOME DO VETERINARIO  "+   pungo.veterinario +" \n");
          lapes.write( "CONTACTO DO PROPRIETARIO "+  pungo.contacto +" \n");
          lapes.write(" OBS "+   pungo.observ+" \n");
          lapes.write("=======================================================================\n");
          lapes.close();
        
          System.out.println("cadastro feito com sucesso "); 
       }catch( IOException e){
           System.out.println("erro ao salvar "+e.getMessage());
       }
    } // fim guardar dados
         
       public static void limpatela(){
           for(int i = 0; i <20;i++){
               System.out.println();
           }
           
       }
        
}// fim Main 

============================================================================ classe ==========================================================================

 package GRUPO014PF1;
import java.util.InputMismatchException; 
import java.util.Scanner;
public class Pungo1 {
   
      Scanner teclado = new Scanner(System.in);
   // declaracao de atributos  
    String nomeanimal;
    String nomedono;
    String especie;
    String racca;
    String idbixo;
    String iddono;
    int idade ;
    String data ;
    String datav; 
    int consulta1=0 ;
    int vacina =0 ;
    int banho=0 ;
    int custo;
    String observ; 
    String veterinario ;
    int contacto ;
   
   public String getIdbixo(){
      return idbixo;
   }
   
   public String getIddono(){
      return iddono;
   }
   public String getNomedono(){
      return nomedono;
   }
   

   public Pungo1(){
      
   }
   
    
   
   
    void consulta(){
       System.out.println("=======================================================================");
       System.out.println("N* DE REGISTRO DO  ANIMAL                :   "+idbixo);
       System.out.println("N* DE REGISTRO DO PROPRIETARIO           :   "+iddono);   
       System.out.println("=======================================================================");
       System.out.println("NOME DO ANIMAL                           :  "+nomeanimal);
       System.out.println("NOME DO PROPRIETARIO                     : "+nomedono);
       System.out.println("ESPECIE                                  : "+especie);
       System.out.println("CONTACTO DONO                            : "+contacto);
       System.out.println("RACA                                     : "+racca);
       System.out.println("DATA DE NASCIMENTO                       : "+data);
       System.out.println("IDADE                                    : "+idade);
       System.out.println("=======================================================================");
       System.out.println("N* DE CUNSULTAS                          : "+consulta1);
       System.out.println("N* DE VACINAS                            : "+vacina);
       System.out.println("N* DE HIGIENE                            : "+banho);
       System.out.println("CUSTO DA VISITA                          : "+ custo);
       System.out.println("=======================================================================");
       System.out.println("DATA DA ULTIMA VISITA                    : "+datav);
       System.out.println("NOME DO VETERINARIO QUE O ATENDEU        : "+veterinario);
       System.out.println("CONSIDERACOES E OBSERVACOES              : "+observ);
       System.out.println("=======================================================================");
       
    }// fim consuta 
   
    
      void listagemanimal(){
       System.out.println("=======================================================================");
       System.out.println("N* DE REGISTRO DO PROPRIETARIO       :   "+iddono);
       System.out.println("NOME DO PROPRIETARIO                 : "+nomedono);    
       System.out.println("N* DE REGISTRO DO  ANIMAL            :      "+idbixo);
       System.out.println("=======================================================================");
       System.out.println("NOME DO ANIMAL                       :  "+nomeanimal);
       System.out.println("ESPECIE                              : "+especie);
       System.out.println("RACA                                 : "+racca);
       System.out.println("DATA DE NASCIMENTO                   : "+data);
       System.out.println("IDADE                                : "+idade);
       System.out.println("=======================================================================");
      
    } // fim listagem 
    
    void listagemdono(){
       System.out.println("=======================================================================");
       System.out.println("N* DE REGISTRO DO  ANIMAL :      "+idbixo);
       System.out.println("=======================================================================");
       System.out.println("NOME DO ANIMAL            :  "+nomeanimal);
       System.out.println("ESPECIE                   : "+especie);
       System.out.println("RACA                      : "+racca);
       System.out.println("DATA DE NASCIMENTO        : "+data);
       System.out.println("IDADE                     : "+idade);
       System.out.println("=======================================================================");
       
    } // fim listagem 
   
