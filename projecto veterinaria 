    String convertipo(int ano,int dia,int mes) {
            String x;
            // convertendo de inteiro para string 
            String a =Integer.toString(dia);
            String b = Integer.toString(mes);
            String c = Integer.toString(ano);
            // vai concatenar as Stringo para formanar uma data legivel 
            
            String d = a.concat("/"+b+"/");
            x = d.concat(c);
            return x;  
    }//fim convert 
   
  String nomearxxx( int cont ){
        String x;
        int m=cont;
        m++;
        String a ="00";
        String b = "0";
        String c = Integer.toString(m);
        if(cont<10){ x=a.concat(c); }else{ if(cont<100){ x=b.concat(c); }else{ x=c; } }
        return x; 
  }// fim nomear dono  
     
   int verificadordata(int ano, int dia, int mes){
      int k =0;
      if(((ano>=2024)&&(ano<=2025))&&((dia<=31)&&(dia>=1))&&((mes>=1)&&(mes<=12))){ k=1;
      }else{ System.out.println("ERRO DATA  INVALIDA ");}
      return k;
   } // fim do verificador de data 
   
   int  verifidata(int ano,int dia,int mes){
      int d = 1;
      if(((2025-ano>=1)&&(2025-ano<=5))&&((dia>=1)&&(dia<=31))&&((mes>=1)&&(mes<=12))){ d=0;
      }else{
       System.out.println("*_* DATA invalida ");  
      }
      return d;
   }
   
   
   int verifnome(String m ,String n){
      int k=1;
      String x ,y ;
      
      
      x = m.toUpperCase();
      y = n.toUpperCase();
      if((x.equals(m))&&(y.equals(n)) && (m != "\n"  && n != "\n" )){
         k=0;
      }else{
         System.out.printf("\n\nos nomes encontram-se em letras minuscula ...! \npor favor escreva em letras maiusculas ...\n\n");
      }
      
      return k;
   }
}









